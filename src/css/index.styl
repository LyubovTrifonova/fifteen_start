body,
html {
    font: 16px/1.4 Georgia, serif;
}

* {
    margin: 0;
    border: none;
    padding: 0;
}

.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;    
}

h1 {
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen {
    width: 100%;
    padding-bottom: 100%;
    background: #F4EEFF;
    margin-bottom: 1.5rem;
    position: relative;

    .item{
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        background: #000;
        color: #fff;
        font-size: 2rem;
        cursor: pointer;

        &Val {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #A6B1E1;
        }
    }
}

.button {
    color: #fff;
    background: #000;
    font: 1.2rem/1.4 Georgia, serif;
    cursor: pointer;
    padding: 0.5em 1.5em;
    border-radius: 5px;

    &:hover {
        background: #A6B1E1;
    }
}